  "scripts": {
    "start": "node ./server/build/server.js",
    "prebuild": "rm -rf ./build && rm -rf ./server/build",
    "build": "yarn server && yarn client",
    "client": "webpack --config ./webpack/webpack.prod.js",
    "server": "babel ./server -d ./server/build",
    "dev": "concurrently --kill-others-on-fail \"yarn dev-server\" \"yarn dev-client\"",
    "dev-client": "webpack-dev-server --config ./webpack/webpack.dev.js --color",
    "dev-server": "nodemon --exec babel-node ./server/server.js"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase": "^7.2.0",
